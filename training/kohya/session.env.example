# Copy to session.env and fill values
# cp training/kohya/session.env.example training/kohya/session.env

# Absolute path to your kohya_ss checkout
KOHYA_ROOT=/path/to/kohya_ss

# SDXL base model (.safetensors or diffusers dir)
BASE_MODEL_PATH=/path/to/sd_xl_base_1.0.safetensors

# Optional SDXL VAE path (leave empty to use model default)
VAE_PATH=

# Dataset root using Kohya structure, e.g. /path/to/dataset/10_subject/*.jpg
TRAIN_DATA_DIR=/path/to/dataset

# Output and logs
OUTPUT_DIR=training/kohya/output
LOGGING_DIR=training/kohya/logs

# LoRA metadata
OUTPUT_NAME=sdxl_kohya_lora
TRIGGER_WORD=subjecttoken

# Core training settings
NETWORK_DIM=16
NETWORK_ALPHA=16
LEARNING_RATE=1e-4
UNET_LR=1e-4
TEXT_ENCODER_LR=5e-6
TRAIN_BATCH_SIZE=1
MAX_TRAIN_STEPS=2400
SAVE_EVERY_N_STEPS=200
RESOLUTION=1024,1024
MIXED_PRECISION=bf16
SAVE_PRECISION=bf16
SEED=42

# Scheduler
LR_SCHEDULER=cosine_with_restarts
LR_WARMUP_STEPS=100

# Optional regularization dataset
REG_DATA_DIR=
